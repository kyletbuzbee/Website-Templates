{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run preview",
      "startServerReadyTimeout": 60000,
      "url": [
        "http://localhost:4173",
        "http://localhost:4173/healthcare/minimal-creative/index.html",
        "http://localhost:4173/fitness/professional-enterprise/index.html",
        "http://localhost:4173/contractors-trades/business-professional/index.html",
        "http://localhost:4173/legal/business-professional/index.html"
      ],
      "settings": {
        "preset": "desktop",
        "emulatedFormFactor": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.8}],
        "categories:accessibility": ["error", {"minScore": 0.9}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],
        "categories:pwa": "off",

        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "first-contentful-paint": ["error", {"maxNumericValue": 1800}],
        "speed-index": ["error", {"maxNumericValue": 3000}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],

        "unminified-javascript": "off",
        "unminified-css": "off",
        "unused-javascript": "warn",
        "unused-css-rules": "warn",
        "render-blocking-resources": ["error", {"maxLength": 0}],
        "uses-responsive-images": "off",
        "efficient-animated-content": "off"
      },
      "budgetsFile": "./budget.json"
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
