{
  "version": "1.0.0",
  "template": "contractors-trades",
  "description": "CMS field mapping for Contractors & Trades template",
  "cms_mappings": {
    "wordpress": {
      "name": "WordPress",
      "acf_version": ">=5.0",
      "field_groups": [
        {
          "title": "Company Information",
          "location": [
            {
              "param": "page_template",
              "operator": "==",
              "value": "page-home.php"
            }
          ],
          "fields": [
            {
              "key": "company_name",
              "label": "Company Name",
              "name": "company_name",
              "type": "text",
              "required": 1,
              "default_value": "ProCraft Contractors"
            },
            {
              "key": "company_tagline",
              "label": "Company Tagline",
              "name": "company_tagline",
              "type": "text",
              "default_value": "Building Dreams, One Project at a Time"
            },
            {
              "key": "phone",
              "label": "Phone Number",
              "name": "phone",
              "type": "text",
              "required": 1
            },
            {
              "key": "email",
              "label": "Email Address",
              "name": "email",
              "type": "email",
              "required": 1
            },
            {
              "key": "address",
              "label": "Business Address",
              "name": "address",
              "type": "textarea",
              "rows": 3
            },
            {
              "key": "license_number",
              "label": "License Number",
              "name": "license_number",
              "type": "text"
            }
          ]
        },
        {
          "title": "Hero Section",
          "fields": [
            {
              "key": "hero_title",
              "label": "Hero Title",
              "name": "hero_title",
              "type": "text",
              "required": 1,
              "default_value": "Expert Contractors You Can Trust"
            },
            {
              "key": "hero_subtitle",
              "label": "Hero Subtitle",
              "name": "hero_subtitle",
              "type": "textarea",
              "rows": 3,
              "required": 1
            },
            {
              "key": "hero_image",
              "label": "Hero Image",
              "name": "hero_image",
              "type": "image",
              "required": 1,
              "return_format": "url"
            },
            {
              "key": "hero_primary_cta_text",
              "label": "Primary CTA Text",
              "name": "hero_primary_cta_text",
              "type": "text",
              "default_value": "Get Free Quote"
            },
            {
              "key": "hero_secondary_cta_text",
              "label": "Secondary CTA Text",
              "name": "hero_secondary_cta_text",
              "type": "text",
              "default_value": "View Our Work"
            }
          ]
        },
        {
          "title": "Services Section",
          "fields": [
            {
              "key": "services_title",
              "label": "Services Section Title",
              "name": "services_title",
              "type": "text",
              "default_value": "Our Services"
            },
            {
              "key": "services_subtitle",
              "label": "Services Section Subtitle",
              "name": "services_subtitle",
              "type": "textarea",
              "rows": 2
            },
            {
              "key": "services",
              "label": "Services",
              "name": "services",
              "type": "repeater",
              "required": 1,
              "min": 3,
              "layout": "block",
              "sub_fields": [
                {
                  "key": "service_title",
                  "label": "Service Title",
                  "name": "title",
                  "type": "text",
                  "required": 1
                },
                {
                  "key": "service_description",
                  "label": "Service Description",
                  "name": "description",
                  "type": "textarea",
                  "rows": 3,
                  "required": 1
                },
                {
                  "key": "service_image",
                  "label": "Service Image",
                  "name": "image",
                  "type": "image",
                  "required": 1,
                  "return_format": "url"
                },
                {
                  "key": "service_link",
                  "label": "Service Page Link",
                  "name": "link",
                  "type": "url"
                },
                {
                  "key": "service_features",
                  "label": "Service Features",
                  "name": "features",
                  "type": "repeater",
                  "sub_fields": [
                    {
                      "key": "feature_text",
                      "label": "Feature",
                      "name": "feature",
                      "type": "text"
                    }
                  ]
                }
              ]
            }
          ]
        },
        {
          "title": "Projects Section",
          "fields": [
            {
              "key": "projects_title",
              "label": "Projects Section Title",
              "name": "projects_title",
              "type": "text",
              "default_value": "Our Recent Projects"
            },
            {
              "key": "projects",
              "label": "Projects",
              "name": "projects",
              "type": "repeater",
              "min": 3,
              "layout": "block",
              "sub_fields": [
                {
                  "key": "project_title",
                  "label": "Project Title",
                  "name": "title",
                  "type": "text",
                  "required": 1
                },
                {
                  "key": "project_description",
                  "label": "Project Description",
                  "name": "description",
                  "type": "textarea",
                  "rows": 3,
                  "required": 1
                },
                {
                  "key": "project_image",
                  "label": "Project Image",
                  "name": "image",
                  "type": "image",
                  "required": 1,
                  "return_format": "url"
                },
                {
                  "key": "project_category",
                  "label": "Project Category",
                  "name": "category",
                  "type": "select",
                  "choices": {
                    "kitchens": "Kitchens",
                    "bathrooms": "Bathrooms",
                    "additions": "Additions",
                    "roofing": "Roofing"
                  }
                },
                {
                  "key": "project_date",
                  "label": "Completion Date",
                  "name": "date",
                  "type": "text"
                }
              ]
            }
          ]
        },
        {
          "title": "Testimonials Section",
          "fields": [
            {
              "key": "testimonials",
              "label": "Testimonials",
              "name": "testimonials",
              "type": "repeater",
              "min": 3,
              "layout": "block",
              "sub_fields": [
                {
                  "key": "testimonial_name",
                  "label": "Customer Name",
                  "name": "name",
                  "type": "text",
                  "required": 1
                },
                {
                  "key": "testimonial_company",
                  "label": "Customer Company/Title",
                  "name": "company",
                  "type": "text"
                },
                {
                  "key": "testimonial_quote",
                  "label": "Testimonial Quote",
                  "name": "quote",
                  "type": "textarea",
                  "rows": 4,
                  "required": 1
                },
                {
                  "key": "testimonial_rating",
                  "label": "Rating (1-5)",
                  "name": "rating",
                  "type": "number",
                  "min": 1,
                  "max": 5,
                  "default_value": 5
                }
              ]
            }
          ]
        }
      ]
    },
    "contentful": {
      "name": "Contentful",
      "content_types": [
        {
          "name": "Company Info",
          "id": "companyInfo",
          "fields": [
            {
              "name": "Company Name",
              "id": "companyName",
              "type": "Symbol",
              "required": true
            },
            {
              "name": "Tagline",
              "id": "tagline",
              "type": "Symbol"
            },
            {
              "name": "Phone",
              "id": "phone",
              "type": "Symbol",
              "required": true
            },
            {
              "name": "Email",
              "id": "email",
              "type": "Symbol",
              "required": true
            },
            {
              "name": "Address",
              "id": "address",
              "type": "Text"
            }
          ]
        },
        {
          "name": "Service",
          "id": "service",
          "fields": [
            {
              "name": "Title",
              "id": "title",
              "type": "Symbol",
              "required": true
            },
            {
              "name": "Description",
              "id": "description",
              "type": "Text",
              "required": true
            },
            {
              "name": "Image",
              "id": "image",
              "type": "Link",
              "linkType": "Asset",
              "required": true
            },
            {
              "name": "Features",
              "id": "features",
              "type": "Array",
              "items": {
                "type": "Symbol"
              }
            }
          ]
        }
      ]
    },
    "strapi": {
      "name": "Strapi",
      "content_types": [
        {
          "name": "company-info",
          "attributes": {
            "companyName": {
              "type": "string",
              "required": true
            },
            "tagline": {
              "type": "string"
            },
            "phone": {
              "type": "string",
              "required": true
            },
            "email": {
              "type": "email",
              "required": true
            },
            "address": {
              "type": "text"
            }
          }
        },
        {
          "name": "service",
          "attributes": {
            "title": {
              "type": "string",
              "required": true
            },
            "description": {
              "type": "text",
              "required": true
            },
            "image": {
              "type": "media",
              "multiple": false,
              "required": true
            },
            "features": {
              "type": "json"
            }
          }
        }
      ]
    },
    "webflow": {
      "name": "Webflow",
      "collections": [
        {
          "name": "Company Info",
          "fields": [
            {
              "name": "Company Name",
              "type": "Plain text",
              "required": true
            },
            {
              "name": "Tagline",
              "type": "Plain text"
            },
            {
              "name": "Phone",
              "type": "Plain text",
              "required": true
            },
            {
              "name": "Email",
              "type": "Plain text",
              "required": true
            },
            {
              "name": "Address",
              "type": "Multi-line text"
            }
          ]
        },
        {
          "name": "Services",
          "fields": [
            {
              "name": "Service Title",
              "type": "Plain text",
              "required": true
            },
            {
              "name": "Description",
              "type": "Multi-line text",
              "required": true
            },
            {
              "name": "Service Image",
              "type": "Image",
              "required": true
            },
            {
              "name": "Features",
              "type": "Multi-line text"
            }
          ]
        }
      ]
    }
  },
  "field_mapping_guide": {
    "template_variables": {
      "company_name": "Company/companyName/company_name",
      "hero_title": "Hero/hero_title/heroTitle",
      "services": "Services/services/services (array)",
      "projects": "Projects/projects/projects (array)",
      "testimonials": "Testimonials/testimonials/testimonials (array)"
    },
    "data_transformation": {
      "services_array": "Map each service object to template service structure",
      "image_urls": "Convert CMS image references to full URLs",
      "features_array": "Convert comma-separated features to array"
    }
  },
  "implementation_notes": {
    "wordpress": "Use ACF plugin for advanced custom fields. Create field groups as shown above.",
    "contentful": "Create content types in Contentful dashboard. Use the GraphQL API for data fetching.",
    "strapi": "Create content types in Strapi admin panel. Use REST or GraphQL API.",
    "webflow": "Create collections in Webflow designer. Use Webflow's CMS API for dynamic content."
  }
}
